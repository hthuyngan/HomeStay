<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <!-- Logo/Icon -->
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 70px; height: 70px;">
                            <i class="bi bi-person-plus-fill text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Đăng ký</h2>
                        <p class="text-muted mb-0">Tạo tài khoản mới để bắt đầu</p>
                    </div>

                    <!-- Form -->
                    <form method="post">
                        <!-- Username -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i>Tên đăng nhập
                            </label>
                            <input type="text"
                                   name="username"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập tên đăng nhập"
                                   required />
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Mật khẩu
                            </label>
                            <div class="input-group">
                                <input type="password"
                                       id="password"
                                       name="password"
                                       class="form-control form-control-lg"
                                       placeholder="Nhập mật khẩu"
                                       required />
                                <button class="btn btn-outline-secondary"
                                        type="button"
                                        onclick="togglePassword()">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Error Message -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewBag.Error</div>
                            </div>
                        }

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold mb-3">
                            <i class="bi bi-check-circle me-2"></i>Đăng ký
                        </button>

                        <!-- Divider -->
                        <div class="text-center">
                            <hr class="my-3">
                            <p class="text-muted mb-0">
                                Đã có tài khoản?
                                <a asp-action="Login" class="text-decoration-none fw-semibold">
                                    Đăng nhập ngay
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Footer -->
            <p class="text-center text-muted mt-4">
                <small>
                    <i class="bi bi-shield-check me-1"></i>
                    Thông tin của bạn được bảo mật
                </small>
            </p>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        }
    }
</script>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2) !important;
        }

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.4);
        }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border-color: #0d6efd;
    }
</style>