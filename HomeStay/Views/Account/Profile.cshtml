@model HomeStay.Models.UserProfile


<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center p-4">
                    <!-- Avatar -->
                    <div class="position-relative d-inline-block mb-3">

                        <div class="rounded-circle overflow-hidden shadow"
                             style="width: 120px; height: 120px;">

                            <img src="~/img/kkk.jpg"
                                 alt="Avatar"
                                 class="w-100 h-100"
                                 style="object-fit: cover;" />
                        </div>
                        <button type="button"
                                class="btn btn-sm btn-light rounded-circle position-absolute bottom-0 end-0 shadow-sm"
                                style="width: 35px; height: 35px;">
                            <i class="bi bi-camera-fill"></i>
                        </button>

                    </div>


                    <h5 class="fw-bold mb-1">@(Model?.FullName ?? "Người dùng")</h5>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-person-badge me-1"></i>
                        @Context.Session.GetString("Username")

                    </p>
                    <span class="badge bg-success-subtle text-success mt-2">
                        <i class="bi bi-patch-check-fill me-1"></i>Thành viên
                    </span>

                    <hr class="my-3">

                    <!-- Menu -->
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action active border-0 rounded-3 mb-2">
                            <i class="bi bi-person-circle me-2"></i>Hồ sơ cá nhân
                        </a>
                        <a asp-controller="Bookings" asp-action="MyBookings"
                           class="list-group-item list-group-item-action border-0 rounded-3 mb-2">
                            <i class="bi bi-calendar-check me-2"></i>Đặt phòng của tôi
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0 rounded-3 mb-2">
                            <i class="bi bi-heart me-2"></i>Yêu thích
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0 rounded-3 mb-2">
                            <i class="bi bi-chat-dots me-2"></i>Tin nhắn
                        </a>
                        <a asp-controller="Account" asp-action="Logout"
                           class="list-group-item list-group-item-action border-0 rounded-3 text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                        </a>
                    </div>
                </div>
            </div>

            <!-- Stats Card -->
            <div class="card shadow-sm border-0 rounded-4 mt-3">
                <div class="card-body p-3">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-graph-up me-2 text-primary"></i>Thống kê
                    </h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Tổng đặt phòng</span>
                        <span class="fw-bold">0</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Đánh giá</span>
                        <span class="fw-bold">0</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="bi bi-person-fill-gear text-primary" style="font-size: 1.5rem;"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold mb-1">Thông tin cá nhân</h4>
                            <p class="text-muted mb-0 small">Cập nhật và quản lý thông tin tài khoản của bạn</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Success Message -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>@ViewBag.Success</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Form -->
                    <form method="post">
                        <div class="row g-4">
                            <!-- Họ và tên -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-person me-1 text-primary"></i>Họ và tên
                                    <span class="text-danger">*</span>
                                </label>
                                <input type="text"
                                       asp-for="FullName"
                                       class="form-control form-control-lg"
                                       placeholder="Nhập họ và tên"
                                       required />
                            </div>

                            <!-- Giới tính -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-gender-ambiguous me-1 text-primary"></i>Giới tính
                                </label>
                                <select asp-for="Gender" class="form-select form-select-lg">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="1">Nam</option>
                                    <option value="0">Nữ</option>
                                    <option value="2">Khác</option>
                                </select>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1 text-primary"></i>Email
                                </label>
                                <input type="email"
                                       asp-for="Email"
                                       class="form-control form-control-lg"
                                       placeholder="example@email.com" />
                            </div>

                            <!-- Số điện thoại -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-telephone me-1 text-primary"></i>Số điện thoại
                                </label>
                                <input type="tel"
                                       asp-for="Phone"
                                       class="form-control form-control-lg"
                                       placeholder="0123 456 789" />
                            </div>

                            <!-- Ngày sinh -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1 text-primary"></i>Ngày sinh
                                </label>
                                <input type="date"
                                       asp-for="BirthDate"
                                       class="form-control form-control-lg" />
                            </div>

                            <!-- Địa chỉ -->
                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt me-1 text-primary"></i>Địa chỉ
                                </label>
                                <textarea asp-for="Address"
                                          class="form-control form-control-lg"
                                          rows="3"
                                          placeholder="Nhập địa chỉ của bạn"></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Home" asp-action="Index"
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Section -->
            <div class="card shadow-sm border-0 rounded-4 mt-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-shield-lock me-2 text-warning"></i>Bảo mật tài khoản
                    </h5>
                    <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded-3">
                        <div>
                            <h6 class="mb-1">Đổi mật khẩu</h6>
                            <p class="text-muted mb-0 small">Cập nhật mật khẩu định kỳ để bảo mật tài khoản</p>
                        </div>
                        <a href="#" class="btn btn-outline-warning">
                            <i class="bi bi-key me-2"></i>Đổi mật khẩu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        transition: all 0.3s ease;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
            transform: translateX(5px);
        }

        .list-group-item.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
        border-color: #667eea;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

    .card {
        transition: all 0.3s ease;
    }
</style>