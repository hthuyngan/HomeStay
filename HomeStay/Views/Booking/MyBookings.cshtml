@model IEnumerable<HomeStay.Models.Booking>
@{
    ViewData["Title"] = "Đặt phòng của tôi";
}

<main class="main">
    <!-- Page Title -->
    <div class="page-title light-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <h1 class="mb-2 mb-lg-0">Đặt phòng của tôi</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="current">Đặt phòng của tôi</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- My Bookings Section -->
    <section class="my-bookings-section section">
        <div class="container" data-aos="fade-up">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" data-aos="fade-down">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" data-aos="fade-down">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var booking in Model)
                    {
                        var nights = booking.CheckInDate.HasValue && booking.CheckOutDate.HasValue
                        ? (booking.CheckOutDate.Value - booking.CheckInDate.Value).Days
                        : 0;
                        var totalAmount = booking.Room?.Price.HasValue == true
                        ? nights * booking.Room.Price.Value
                        : 0;
                        var isPast = booking.CheckOutDate.HasValue && booking.CheckOutDate.Value < DateTime.Now;
                        var isUpcoming = booking.CheckInDate.HasValue && booking.CheckInDate.Value > DateTime.Now;
                        var isCurrent = !isPast && !isUpcoming;

                        <div class="col-lg-12 mb-4" data-aos="fade-up" data-aos-delay="100">
                            <div class="booking-card @(isPast ? "past-booking" : "")">
                                <div class="row g-0">
                                    <!-- Room Image -->
                                    <div class="col-md-3">
                                        <div class="booking-image">
                                            <img src="@Url.Content(booking.Room?.Image ?? "~/img/default-room.jpg")"
                                                 alt="@booking.Room?.RoomName"
                                                 class="img-fluid">

                                            @if (isPast)
                                            {
                                                <div class="status-badge past">Đã hoàn thành</div>
                                            }
                                            else if (isCurrent)
                                            {
                                                <div class="status-badge current">Đang diễn ra</div>
                                            }
                                            else
                                            {
                                                <div class="status-badge upcoming">Sắp tới</div>
                                            }
                                        </div>
                                    </div>

                                    <!-- Booking Details -->
                                    <div class="col-md-9">
                                        <div class="booking-body">
                                            <div class="booking-header">
                                                <div>
                                                    <h4 class="booking-title">@booking.Room?.RoomName</h4>
                                                    <p class="booking-type">@booking.Room?.RoomType?.TypeName</p>
                                                </div>
                                                <div class="booking-id">
                                                    <small class="text-muted">Mã đặt phòng</small>
                                                    <strong>#@booking.BookingId.ToString("D6")</strong>
                                                </div>
                                            </div>

                                            <div class="booking-info">
                                                <div class="info-row">
                                                    <div class="info-item">
                                                        <i class="bi bi-calendar-check text-primary"></i>
                                                        <div>
                                                            <small>Nhận phòng</small>
                                                            <strong>
                                                                @(booking.CheckInDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                                            </strong>
                                                        </div>
                                                    </div>

                                                    <div class="info-item">
                                                        <i class="bi bi-calendar-x text-danger"></i>
                                                        <div>
                                                            <small>Trả phòng</small>
                                                            <strong>
                                                                @(booking.CheckOutDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                                            </strong>
                                                        </div>
                                                    </div>

                                                    <div class="info-item">
                                                        <i class="bi bi-moon-stars text-warning"></i>
                                                        <div>
                                                            <small>Số đêm</small>
                                                            <strong>@nights đêm</strong>
                                                        </div>
                                                    </div>

                                                    <div class="info-item">
                                                        <i class="bi bi-people text-success"></i>
                                                        <div>
                                                            <small>Số khách</small>
                                                            <strong>@booking.NumberOfGuests khách</strong>
                                                        </div>
                                                    </div>
                                                </div>

                                                @if (!string.IsNullOrEmpty(booking.SpecialRequest))
                                                {
                                                    <div class="special-request">
                                                        <i class="bi bi-chat-dots"></i>
                                                        <span>@booking.SpecialRequest</span>
                                                    </div>
                                                }
                                            </div>

                                            <div class="booking-footer">
                                                <div class="booking-price">
                                                    <small>Tổng thanh toán</small>
                                                    <h5 class="price-amount">@totalAmount.ToString("N0") VNĐ</h5>
                                                </div>

                                                <div class="booking-actions">
                                                    <a href="/booking/detail/@booking.BookingId"
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye"></i> Chi tiết
                                                    </a>

                                                    @if (!isPast && booking.CheckInDate.HasValue &&
                                                   booking.CheckInDate.Value.AddDays(-1) > DateTime.Now)
                                                    {
                                                        <button type="button"
                                                                class="btn btn-outline-danger btn-sm"
                                                                onclick="confirmCancel(@booking.BookingId)">
                                                            <i class="bi bi-x-circle"></i> Hủy đặt phòng
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state" data-aos="fade-up">
                    <div class="empty-icon">
                        <i class="bi bi-calendar-x"></i>
                    </div>
                    <h3>Chưa có đặt phòng nào</h3>
                    <p>Bạn chưa có đặt phòng nào. Hãy khám phá các phòng đẹp của chúng tôi!</p>
                    <a href="/rooms" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-search"></i> Tìm phòng
                    </a>
                </div>
            }

        </div>
    </section>
</main>

<!-- Cancel Confirmation Modal -->
<form id="cancelForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmCancel(bookingId) {
            if (confirm('Bạn có chắc chắn muốn hủy đặt phòng này?')) {
                const form = document.getElementById('cancelForm');
                form.action = '/booking/cancel/' + bookingId;
                form.submit();
            }
        }
    </script>
}

<style>
    .my-bookings-section {
        padding: 60px 0;
        background: #f8f9fa;
        min-height: 60vh;
    }

    .booking-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .booking-card.past-booking {
            opacity: 0.8;
        }

    .booking-image {
        position: relative;
        height: 100%;
        min-height: 250px;
    }

        .booking-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .status-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        color: white;
    }

        .status-badge.past {
            background: #6c757d;
        }

        .status-badge.current {
            background: #28a745;
        }

        .status-badge.upcoming {
            background: #0d6efd;
        }

    .booking-body {
        padding: 25px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .booking-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .booking-title {
        font-size: 1.5rem;
        margin-bottom: 5px;
        color: #333;
    }

    .booking-type {
        color: #666;
        margin: 0;
    }

    .booking-id {
        text-align: right;
    }

        .booking-id small {
            display: block;
            font-size: 0.75rem;
        }

        .booking-id strong {
            font-size: 1.1rem;
            color: #0d6efd;
        }

    .booking-info {
        flex: 1;
    }

    .info-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-bottom: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .info-item i {
            font-size: 1.5rem;
        }

        .info-item small {
            display: block;
            font-size: 0.8rem;
            color: #666;
        }

        .info-item strong {
            display: block;
            font-size: 1rem;
            color: #333;
        }

    .special-request {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 8px;
        font-size: 0.9rem;
        color: #666;
    }

        .special-request i {
            color: #0d6efd;
            font-size: 1.2rem;
        }

    .booking-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 2px solid #f0f0f0;
    }

    .booking-price small {
        display: block;
        font-size: 0.8rem;
        color: #666;
        margin-bottom: 5px;
    }

    .price-amount {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0d6efd;
        margin: 0;
    }

    .booking-actions {
        display: flex;
        gap: 10px;
    }

        .booking-actions .btn {
            padding: 8px 20px;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    .empty-icon {
        font-size: 5rem;
        color: #dee2e6;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        font-size: 1.8rem;
        color: #333;
        margin-bottom: 15px;
    }

    .empty-state p {
        color: #666;
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .booking-card .row

    {
        flex-direction: column;
    }

    .booking-image {
        min-height: 200px;
    }

    .booking-header {
        flex-direction: column;
        gap: 15px;
    }

    .booking-id {
        text-align: left;
    }

    .info-row {
        grid-template-columns: repeat(2, 1fr);
    }

    .booking-footer {
        flex-direction: column;
        gap: 15px;
        align-items: stretch;
    }

    .booking-actions {
        flex-direction: column;
    }

        .booking-actions .btn {
            width: 100%;
        }

    }
</style>